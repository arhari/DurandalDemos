<section>
   <div data-bind="with: model">
      <div class="row-fluid">
         <div class="control-group span3">
            <label class="control-label">ID</label>
            <div class="controls">
               <input type="text" class="span12" data-bind="value: Id" />
            </div>
         </div>
         <div class="control-group span3">
            <label class="control-label">Product</label>
            <div class="controls">
               <input type="text" class="span12" data-bind="value: Product" />
            </div>
         </div>

         <div class="control-group span3">
            <label class="control-label">Date</label>
            <div class="controls">
               <input type="date" class="span12" data-bind="value: CalcDate" />
            </div>
         </div>
         <div class="control-group span3">
            <label class="control-label">Amount</label>
            <div class="controls">
               <input type="number" class="span12" data-bind="value: Amount" />
            </div>
         </div>
      </div>

      <div class="row-fluid">
         <div class="control-group span3 offset9">
            <label class="control-label" style="height: 20px"></label>
            <div class="controls">
               <button type="button" class="btn btn-link" data-bind="click: $parent.manageAsset.bind($parent)"><i class="icon-tasks"></i>Manage Asset</button>
            </div>
         </div>
      </div>
   </div>

   <div data-bind="with: calculator">
      <!--ko compose: {view: 'Calculator'} -->
      <!--/ko-->
   </div>
</section>